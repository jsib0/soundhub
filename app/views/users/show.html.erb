<h1>Welcome <%= @user.username%></h1>
<% content_for :left do %>
  <form class="" action="/artists" method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Artist Name:</label>
    <input type="text" name="artist_name" value="">
    <input type="submit" name="" value="Search">
  </form>

  <form class="" action="/tracks" method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Song Name:</label>
    <input type="text" name="track_name" value="">
    <input type="submit" name="" value="Search">
  </form>

  <form class="" action="/albums" method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Album Name:</label>
    <input type="text" name="album_name" value="">
    <input type="submit" name="" value="Search">
  </form>
<% end %>

<% content_for :middle do %>
  <h2>Favorite Tracks</h2>
  <table>
    <tr>
      <th>Track</th>
      <th>Artists</th>
      <th>Album</th>
      <th>Released Year</th>
    </tr>

    <tr>
      <td>Testing</td>
      <td>Testing</td>
      <td>Testing</td>
      <td>Testing</td>
    </tr>
  </table>

  <h2>Favorite Artists</h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Genres</th>
      <th>Top Track</th>
      <th>Action</th>
    </tr>

    <% @favartist.each do |fa| %>
    <tr>
      <td><a href="/artists/<%= fa.artist_id %>"><%= fa.name %></a></td>
      <td><%= fa.artist_id %></td>
      <td>Testing</td>
      <td>
        <form style="display:inline-block" action="/favartist" method="post" data-confirm="are your sure?">
          <input type="hidden" name="_method" value="delete">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="favartist[artist_id]" value="<%= fa.artist_id %>">
          <input type="submit" name="" value="Remove">
        </form>
      </td>
    </tr>
    <% end %>
  </table>

  <h2>Favorite Albums</h2>
  <table>
    <tr>
      <th>Album</th>
      <th>Artist</th>
      <th>Popularity</th>
      <th>Relased Year</th>
    </tr>

    <% @favalbum.each do |favalbum| %>
    <tr>
      <td><%= favalbum.name %></td>
      <td><a href="/artists/<%= favalbum.artist_id %>"><%= favalbum.artist %></a> </td>
      <td><%= favalbum.popularity %></td>
      <td><%= favalbum.releasedate %></td>
    </tr>
    <% end %>
  </table>
<% end %>

<% content_for :right do%>
<h4>here we will have a box rendering the most popular songs</h4>
<% end %>
